<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Cart.OrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="0dp"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#0277BD"
            android:layout_gravity="center|center_vertical"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/back_order"
            android:src="@drawable/btn_arrow_circle_left_normal"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center"
            android:layout_marginLeft="8dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/toolbar_order"
        android:layout_above="@id/cardview_order_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pin_drop_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pin_drop"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"/>

                    <TextView
                        android:id="@+id/diachi_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:"
                        android:textStyle="italic"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@id/pin_drop_order"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="25dp"/>

                    <TextView
                        android:id="@+id/user_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Quốc Hưng"
                        android:textStyle="italic"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@id/diachi_order"
                        app:layout_constraintTop_toBottomOf="@id/diachi_order"/>

                    <TextView
                        android:id="@+id/dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textStyle="italic"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@id/user_order"
                        app:layout_constraintBaseline_toBaselineOf="@id/user_order"
                        android:layout_marginHorizontal="5dp"
                        app:layout_constraintEnd_toStartOf="@id/sdt_order"/>

                    <TextView
                        android:id="@+id/sdt_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+84)9452369311"
                        android:textStyle="italic"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@id/dash"
                        app:layout_constraintBaseline_toBaselineOf="@id/user_order"
                        android:layout_marginHorizontal="5dp"/>

                    <TextView
                        android:id="@+id/home_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75/8 đường Hưng Yên"
                        android:textStyle="italic"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="@id/diachi_order"
                        app:layout_constraintTop_toBottomOf="@id/user_order"/>
                    <TextView
                        android:id="@+id/city_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phường 8, Quận 3, TP.HCM"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/diachi_order"
                        app:layout_constraintTop_toBottomOf="@id/home_order"/>

                    <ImageButton
                        android:id="@+id/change_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_arrow_forward"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="0dp"
                android:id="@+id/rcv_item_order"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/payment_method_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương thức thanh toán"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#0277BD"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:id="@+id/shape_payment_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_payment"
                        app:layout_constraintTop_toBottomOf="@id/payment_method_order"
                        app:layout_constraintStart_toStartOf="@id/payment_method_order"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginVertical="8dp"/>

                    <ImageView
                        android:id="@+id/icon_payment_order"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_cash"
                        app:layout_constraintTop_toTopOf="@id/shape_payment_order"
                        app:layout_constraintBottom_toBottomOf="@id/shape_payment_order"
                        app:layout_constraintStart_toStartOf="@id/shape_payment_order"
                        android:layout_marginStart="15dp"/>


                    <TextView
                        android:id="@+id/name_payment_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán khi nhận hàng"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/shape_payment_order"
                        app:layout_constraintBottom_toBottomOf="@id/shape_payment_order"
                        app:layout_constraintStart_toEndOf="@id/icon_payment_order"
                        android:layout_marginStart="15dp"/>


                    <ImageButton
                        android:id="@+id/change_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_arrow_forward"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="@id/change_payment"
                        app:layout_constraintTop_toBottomOf="@id/change_payment"
                        android:layout_marginTop="4dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/voucher_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voucher"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        app:layout_constraintTop_toTopOf="@id/icon_voucher_order"
                        app:layout_constraintStart_toEndOf="@id/icon_voucher_order"
                        app:layout_constraintBottom_toBottomOf="@id/icon_voucher_order"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:id="@+id/icon_voucher_order"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_coupon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"/>

                    <ImageButton
                        android:id="@+id/add_voucher_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_arrow_forward"
                        android:background="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="10dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="17dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_cthd"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/ic_receipt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/view_line1_cthd"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/cthd_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết hóa đơn"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="#0277BD"
                        app:layout_constraintStart_toEndOf="@id/icon_cthd"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"/>

                    <View
                        android:id="@+id/view_line1_cthd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/icon_cthd"
                        app:layout_constraintBottom_toTopOf="@id/tienhang_order"
                        android:layout_marginHorizontal= "20dp"
                        android:layout_marginBottom="7dp"/>

                    <TextView
                        android:id="@+id/tienhang_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền hàng (tạm tính)"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cthd_order"
                        android:layout_marginStart="30dp"
                        android:layout_marginVertical="12dp"/>

                    <TextView
                        android:id="@+id/delivery_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phí vận chuyển"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tienhang_order"
                        android:layout_marginStart="30dp"
                        android:layout_marginVertical="12dp"/>

                    <TextView
                        android:id="@+id/discount_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã giảm giá"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/delivery_order"
                        android:layout_marginStart="30dp"
                        android:layout_marginVertical="12dp"/>

                    <TextView
                        android:id="@+id/discount_delivery_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miễn phí vận chuyển"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/discount_order"
                        android:layout_marginStart="30dp"
                        android:layout_marginVertical="12dp"/>

                    <View
                        android:id="@+id/view_line2_cthd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/discount_delivery_order"
                        app:layout_constraintBottom_toTopOf="@id/tong_tien_cthd_order"
                        android:layout_marginHorizontal= "20dp"
                        android:layout_marginBottom="7dp"/>

                    <TextView
                        android:id="@+id/tong_tien_cthd_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/discount_delivery_order"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/VAT_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(đã bao gồm thuế VAT)"
                        android:textStyle="italic"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tong_tien_cthd_order"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"/>


                    <TextView
                        android:id="@+id/tienhang_price_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="325.000 đồng"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/tienhang_order"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/delivery_price_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20.000 đồng"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/delivery_order"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/discount_price_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-20.000 đồng"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/discount_order"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/discount_delivery_price_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-20.000 đồng"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/discount_delivery_order"
                        android:layout_marginEnd="20dp"/>

                    <TextView
                        android:id="@+id/tongtien_price_cthd_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="325.000 đồng"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/tong_tien_cthd_order"
                        android:layout_marginEnd="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/imagebtn_order"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/btn_check_out"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặt hàng"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    android:textColor="#0277BD"
                    android:layout_gravity="center"/>

            </FrameLayout>
            <TextView
                android:layout_toLeftOf="@+id/tong_tien_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tong_tien_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="325.000 đồng"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>